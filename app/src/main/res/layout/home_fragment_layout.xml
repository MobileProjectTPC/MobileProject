<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="32dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="40dp" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="10dip"
            app:centered="true"
            app:fillColor="@color/backgroundEnd"
            app:pageColor="@color/backgroundStart"
            app:snap="false"
            app:strokeColor="@color/backgroundStart" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="24dp"
        android:layout_gravity="center_horizontal"
        android:text="To get tool details scan NFC here or open camera to scan QR code below. Remember to enable it first."
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/button_scan_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="Scan QR code to get tool details"
        android:textColor="@color/colorWhite" />





    <Button
        android:id="@+id/btnPortfolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Portfolio"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tools"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>